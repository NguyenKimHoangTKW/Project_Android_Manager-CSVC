<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_background_blue">

    <!-- Phần thông tin duyệt mượn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- Tiêu đề Duyệt mượn -->
        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DUYỆT MƯỢN"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <!-- Tiêu đề Tên CBVC -->
        <TextView
            android:id="@+id/tvduyettencbvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên CBVC"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"/>

        <!-- Tiêu đề Tên thiết bị -->
        <TextView
            android:id="@+id/tvduyettenthietbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên thiết bị"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"/>

        <!-- Tiêu đề Phòng học -->
        <TextView
            android:id="@+id/tvrowphonghocduyemuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng học"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"/>

        <!-- Spinner chọn trạng thái -->
        <Spinner
            android:id="@+id/spinDropTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Tiêu đề Thông báo -->
        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo đến người mượn (nếu chọn hủy)"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingBottom="8dp"/>

        <!-- EditText nhập thông báo -->
        <EditText
            android:id="@+id/edtThongBaoDenUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập thông báo"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

    <!-- Phần nút xác nhận và thoát -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="16dp">

        <!-- Nút Xác nhận -->
        <Button
            android:id="@+id/btnduyetmuon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác nhận"
            android:textSize="16sp"
            android:textColor="#46aee2"
            android:backgroundTint="@color/white"
            android:textStyle="bold"/>

        <!-- Nút Thoát -->
        <Button
            android:id="@+id/btnthoatduyetmuon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thoát"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:backgroundTint="#F44336"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
</LinearLayout>

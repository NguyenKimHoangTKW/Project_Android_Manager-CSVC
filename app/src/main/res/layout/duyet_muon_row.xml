<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DUYỆT MƯỢN"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tvduyettencbvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên CBVC" />

        <TextView
            android:id="@+id/tvduyettenthietbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên thiết bị" />

        <TextView
            android:id="@+id/tvrowphonghocduyemuon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng học" />

        <Spinner
            android:id="@+id/spinDropTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo đến người mượn (nếu chọn hủy)" />

        <EditText
            android:id="@+id/edtThongBaoDenUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnduyetmuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác nhận" />

        <Button
            android:id="@+id/btnthoatduyetmuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thoát" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityInterface.ui.phonghoc.PhongHocFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách phòng học" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập tên phòng học muốn thêm mới" />

        <EditText
            android:id="@+id/edttenphonghoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/btnaddnewphonghoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm mới phòng học" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvADPhonghoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityInterface.ui.phonghoc.PhongHocFragment" >

    <!-- Phần tiêu đề và nhập phòng học -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background_blue"
        android:paddingBottom="16dp">

        <!-- Tiêu đề Danh sách phòng học -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách phòng học"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center" />

        <!-- Tiêu đề Nhập tên phòng học -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập tên phòng học muốn thêm mới"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="16sp" />

        <!-- EditText để nhập tên phòng học -->
        <EditText
            android:id="@+id/edttenphonghoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Tên phòng học"
            android:textSize="16sp"
            android:background="@android:drawable/edit_text"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Nút Thêm mới phòng học -->
        <Button
            android:id="@+id/btnaddnewphonghoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm mới phòng học"
            android:textColor="#46aee2"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- ListView hiển thị danh sách phòng học -->
    <ListView
        android:id="@+id/lvADPhonghoc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"/>

</LinearLayout>

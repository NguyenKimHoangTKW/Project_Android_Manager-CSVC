<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Phần thông tin mượn thiết bị -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tên người dùng và thiết bị mượn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Cột 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tvrowTennguoidungmuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng mượn"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvShowtenthietbimuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên thiết bị mượn"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvShowtenphonghocmuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên phòng học mượn"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvSoluongmuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng mượn"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <!-- Cột 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvYeuCauMuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yêu cầu mượn"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvLydohuymuonuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lý do hủy"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvngaydangkymuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày đăng ký mượn"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvNgaymuonuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày mượn"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Thông tin ngày trả và trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Cột 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNgayhuyuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày hủy"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvNgaytrauser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày trả"
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvTrangthaimuon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái mượn"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

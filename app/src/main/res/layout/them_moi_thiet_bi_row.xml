<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm mới thiết bị"
            android:background="@drawable/rounded_background_blue"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center" />

        <!-- Device Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Tên thiết bị:" />

            <EditText
                android:id="@+id/edtAddTenthietbi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text" />
        </LinearLayout>

        <!-- Specifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Thông số:" />

            <EditText
                android:id="@+id/edtAddThongSo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text" />
        </LinearLayout>

        <!-- Brand -->
        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn thương hiệu"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingTop="8dp" />

        <Spinner
            android:id="@+id/spinChonThuongHieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Số lượng:" />

            <EditText
                android:id="@+id/edtNhapSoLuong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="number" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả (nếu có)"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edtNhapMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />

        <!-- Unit -->
        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn đơn vị tính"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingTop="8dp" />

        <Spinner
            android:id="@+id/spinChonDonViTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Category -->
        <TextView
            android:id="@+id/textView31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phân loại"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingTop="8dp" />

        <Spinner
            android:id="@+id/spinPhanLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btnThemmoithietbi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#46aee2"
                android:text="Cập nhật" />

            <Button
                android:id="@+id/btnThoatThietBi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#9e9e9e"
                android:text="Thoát" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
